---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout 
  title="Sujith Christopher - Project Research Scientist | Bioengineering & AI Researcher"
  description="Sujith Christopher is a Project Research Scientist at IIT Madras specializing in bioengineering, neuro-rehabilitation technology, computer vision, AI, sensors, and biomedical robotics. Explore his research, publications, and professional journey."
  keywords="Sujith Christopher, Project Research Scientist, IIT Madras, bioengineering, neuro-rehabilitation, computer vision, artificial intelligence, sensors, biomedical robotics, research scientist, CMC Vellore, SCTIMST"
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative overflow-hidden pt-24 pb-12 lg:pt-36 lg:pb-20 bg-grid-pattern">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-50/50 via-white to-accent-50/30 dark:from-primary-950/20 dark:via-gray-950 dark:to-gray-900 -z-10"></div>
      
      <div class="container-custom relative">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
          <!-- Hero Content -->
          <div class="lg:col-span-7 text-center lg:text-left order-2 lg:order-1 animate-fade-in">
            <div class="inline-flex items-center px-4 py-1.5 mb-4 rounded-full bg-primary-50 dark:bg-primary-900/30 border border-primary-100 dark:border-primary-800">
              <span class="flex h-2 w-2 rounded-full bg-primary-500 mr-2"></span>
              <span class="text-xs font-semibold text-primary-700 dark:text-primary-300 uppercase tracking-wider">Project Research Scientist</span>
            </div>
            
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-[1.1]">
              Hi, I'm 
              <span class="text-gradient">
                Sujith Christopher
              </span>
            </h1>
            
            <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 mb-8 leading-relaxed max-w-2xl mx-auto lg:mx-0">
              Passionate about bridging the gap between <span class="text-gray-900 dark:text-white font-medium">Bioengineering</span> and <span class="text-gray-900 dark:text-white font-medium">AI</span> to create innovative neuro-rehabilitation technologies.
            </p>
            
            <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
              <a href="/research" class="btn-primary">
                Explore Research
              </a>
              <a href="/news" class="btn-secondary">
                Latest Updates
              </a>
            </div>
          </div>

          <!-- Profile Image -->
          <div class="lg:col-span-5 flex justify-center order-1 lg:order-2 animate-fade-in" style="animation-delay: 0.2s;">
            <div class="relative group">
              <div class="absolute -inset-4 bg-gradient-to-tr from-primary-500 to-accent-500 rounded-full blur-2xl opacity-20 group-hover:opacity-40 transition duration-1000"></div>
              <div class="relative w-64 h-64 md:w-80 md:h-80 rounded-3xl overflow-hidden shadow-2xl rotate-3 group-hover:rotate-0 transition-all duration-700 ease-out border-8 border-white dark:border-gray-800">
                <img 
                  src="/Sujith.jpg" 
                  alt="Sujith Christopher" 
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Affiliations/Trust Logos -->
    <section class="py-8 border-y border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-900/20">
      <div class="container-custom">
        <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 opacity-50 grayscale hover:grayscale-0 transition-all duration-500">
          <span class="text-lg font-bold text-gray-400 dark:text-gray-500 tracking-tighter">IIT MADRAS</span>
          <span class="text-lg font-bold text-gray-400 dark:text-gray-500 tracking-tighter">CMC VELLORE</span>
          <span class="text-lg font-bold text-gray-400 dark:text-gray-500 tracking-tighter">SCTIMST</span>
          <span class="text-lg font-bold text-gray-400 dark:text-gray-500 tracking-tighter">KARUNYA</span>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="section-padding overflow-hidden">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-2xl md:text-4xl font-bold mb-4">About My Work</h2>
            <div class="w-16 h-1 bg-primary-600 mx-auto rounded-full"></div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Education -->
            <div class="card group hover:border-primary-200 dark:hover:border-primary-800 transition-colors animate-slide-up">
              <div class="flex items-center mb-6">
                <div class="p-3 bg-primary-50 dark:bg-primary-900/30 rounded-2xl group-hover:bg-primary-600 group-hover:text-white transition-colors duration-300">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold ml-4">Education</h3>
              </div>
              
              <div class="space-y-4">
                <div class="relative pl-6 border-l-2 border-primary-200 dark:border-primary-800 group-hover:border-primary-500 transition-colors">
                  <h4 class="text-base font-bold text-gray-900 dark:text-white mb-1">M.S. in Bioengineering</h4>
                  <p class="text-primary-600 dark:text-primary-400 font-semibold text-xs mb-1">2021 — 2023</p>
                  <p class="text-gray-600 dark:text-gray-400 text-xs leading-relaxed">Joint degree program by CMC Vellore & SCTIMST Trivandrum</p>
                </div>
                
                <div class="relative pl-6 border-l-2 border-primary-200 dark:border-primary-800 group-hover:border-primary-500 transition-colors">
                  <h4 class="text-base font-bold text-gray-900 dark:text-white mb-1">B.Tech in Electronics</h4>
                  <p class="text-primary-600 dark:text-primary-400 font-semibold text-xs mb-1">2013 — 2017</p>
                  <p class="text-gray-600 dark:text-gray-400 text-xs leading-relaxed">Karunya Institute of Technology and Sciences, Coimbatore</p>
                </div>
              </div>
            </div>

            <!-- Current Position -->
            <div class="card group hover:border-accent-200 dark:hover:border-accent-800 transition-colors animate-slide-up" style="animation-delay: 0.1s;">
              <div class="flex items-center mb-6">
                <div class="p-3 bg-accent-50 dark:bg-accent-900/30 rounded-2xl group-hover:bg-accent-600 group-hover:text-white transition-colors duration-300">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold ml-4">Current Role</h3>
              </div>
              
              <div class="relative pl-6 border-l-2 border-accent-200 dark:border-accent-800 group-hover:border-accent-500 transition-colors">
                <h4 class="text-base font-bold text-gray-900 dark:text-white mb-1">Project Research Scientist</h4>
                <p class="text-accent-600 dark:text-accent-400 font-semibold text-xs mb-1">Mar 2025 — Present</p>
                <p class="text-gray-600 dark:text-gray-400 text-xs leading-relaxed mb-3">
                  Department of Mechanical Engineering<br/>
                  <span class="font-bold">Indian Institute of Technology (IIT) Madras</span>
                </p>
                <div class="flex flex-wrap gap-2">
                  <span class="px-2 py-0.5 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 text-[9px] font-bold uppercase tracking-wider rounded-md">Neuro-Rehab</span>
                  <span class="px-2 py-0.5 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 text-[9px] font-bold uppercase tracking-wider rounded-md">Robotics</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Experience Timeline -->
    <section class="section-padding bg-gray-50 dark:bg-gray-900/50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-2xl md:text-4xl font-bold mb-4">Professional Journey</h2>
            <div class="w-16 h-1 bg-primary-600 mx-auto rounded-full"></div>
          </div>
          
          <div class="relative">
            <!-- Timeline line -->
            <div class="absolute left-10 md:left-1/2 top-0 bottom-0 w-1 bg-gradient-to-b from-primary-200 via-primary-500 to-accent-500 dark:from-primary-900 dark:via-primary-700 dark:to-accent-900 md:-translate-x-1/2 rounded-full opacity-30"></div>
            
            <div class="space-y-8 relative">
              <!-- IIT Madras Current -->
              <div class="relative flex flex-col md:flex-row items-center animate-slide-up">
                <div class="absolute left-10 md:left-1/2 w-5 h-5 bg-white dark:bg-gray-950 border-4 border-primary-500 rounded-full md:-translate-x-1/2 shadow-[0_0_15px_rgba(14,140,228,0.5)] z-10"></div>
                <div class="md:w-1/2 md:pr-12 ml-20 md:ml-0 md:text-right">
                  <div class="glass-card p-5 hover:border-primary-500/50 transition-all duration-500">
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">Project Research Scientist</h3>
                    <p class="text-primary-600 dark:text-primary-400 font-semibold text-sm mb-2">Mar 2025 - Present</p>
                    <p class="text-gray-600 dark:text-gray-400 text-xs leading-relaxed">IIT Madras, Dept. of Mechanical Engineering</p>
                  </div>
                </div>
              </div>
              
              <!-- IIT Madras Associate -->
              <div class="relative flex flex-col md:flex-row items-center animate-slide-up" style="animation-delay: 0.1s;">
                <div class="absolute left-10 md:left-1/2 w-5 h-5 bg-white dark:bg-gray-950 border-4 border-primary-400 rounded-full md:-translate-x-1/2 z-10"></div>
                <div class="md:w-1/2 md:pl-12 ml-20 md:ml-0 md:mr-auto">
                  <div class="glass-card p-5 hover:border-primary-400/50 transition-all duration-500">
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">Project Associate</h3>
                    <p class="text-primary-500 dark:text-primary-400 font-semibold text-sm mb-2">Oct 2023 - Feb 2025</p>
                    <p class="text-gray-600 dark:text-gray-400 text-xs leading-relaxed">IIT Madras, Dept. of Mechanical Engineering</p>
                  </div>
                </div>
              </div>

              <!-- CMC Vellore -->
              <div class="relative flex flex-col md:flex-row items-center animate-slide-up" style="animation-delay: 0.2s;">
                <div class="absolute left-10 md:left-1/2 w-5 h-5 bg-white dark:bg-gray-950 border-4 border-accent-500 rounded-full md:-translate-x-1/2 z-10"></div>
                <div class="md:w-1/2 md:pr-12 ml-20 md:ml-0 md:text-right">
                  <div class="glass-card p-5 hover:border-accent-500/50 transition-all duration-500">
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">Postgraduate Trainee</h3>
                    <p class="text-accent-600 dark:text-accent-400 font-semibold text-sm mb-2">Oct 2021 - Oct 2023</p>
                    <p class="text-gray-600 dark:text-gray-400 text-xs leading-relaxed">CMC Vellore, Dept. of Bioengineering</p>
                  </div>
                </div>
              </div>

              <!-- Hidden positions -->
              <div id="hidden-positions" class="hidden space-y-8">
                <div class="relative flex flex-col md:flex-row items-center pt-8">
                  <div class="absolute left-10 md:left-1/2 w-5 h-5 bg-white dark:bg-gray-950 border-4 border-gray-400 rounded-full md:-translate-x-1/2 z-10"></div>
                  <div class="md:w-1/2 md:pl-12 ml-20 md:ml-0 md:mr-auto">
                    <div class="glass-card p-5">
                      <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">Project Associate</h3>
                      <p class="text-gray-500 dark:text-gray-400 font-semibold text-sm mb-2">Mar 2021 - Sep 2021</p>
                      <p class="text-gray-600 dark:text-gray-400 text-xs leading-relaxed">IIT Madras, Dept. of Applied Mechanics</p>
                    </div>
                  </div>
                </div>
                
                <div class="relative flex flex-col md:flex-row items-center">
                  <div class="absolute left-10 md:left-1/2 w-5 h-5 bg-white dark:bg-gray-950 border-4 border-gray-400 rounded-full md:-translate-x-1/2 z-10"></div>
                  <div class="md:w-1/2 md:pr-12 ml-20 md:ml-0 md:text-right">
                    <div class="glass-card p-5">
                      <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">Senior Research Fellow</h3>
                      <p class="text-gray-500 dark:text-gray-400 font-semibold text-sm mb-2">Aug 2019 - Aug 2020</p>
                      <p class="text-gray-600 dark:text-gray-400 text-xs leading-relaxed">CMC Vellore, Dept. of Radiation Oncology</p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Show More Button -->
              <div class="text-center pt-4">
                <button 
                  id="toggle-positions-btn" 
                  class="btn-secondary group !py-2 !px-6 !text-sm"
                >
                  <span id="positions-btn-text">Explore Full Journey</span>
                  <svg id="positions-chevron" class="w-4 h-4 ml-2 transition-transform duration-500 inline-block group-hover:translate-y-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Research Areas -->
    <section class="section-padding bg-grid-pattern">
      <div class="container-custom">
        <div class="text-center mb-12">
          <h2 class="text-2xl md:text-4xl font-bold mb-4">Research Domains</h2>
          <div class="w-16 h-1 bg-primary-600 mx-auto rounded-full"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
          <div class="glass-card p-8 text-center group hover:-translate-y-1 transition-all duration-500 border-t-4 border-t-primary-500">
            <div class="inline-flex p-4 bg-primary-50 dark:bg-primary-900/30 rounded-2xl mb-6 group-hover:bg-primary-600 group-hover:text-white transition-all duration-500 shadow-inner">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Computer Vision & AI</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
              Developing intelligent systems for medical image analysis and automated diagnosis using state-of-the-art deep learning frameworks.
            </p>
          </div>
          
          <div class="glass-card p-8 text-center group hover:-translate-y-1 transition-all duration-500 border-t-4 border-t-accent-500">
            <div class="inline-flex p-4 bg-accent-50 dark:bg-accent-900/30 rounded-2xl mb-6 group-hover:bg-accent-600 group-hover:text-white transition-all duration-500 shadow-inner">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Biomedical Robotics</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
              Designing sensor-integrated robotic devices for neuro-rehabilitation to improve the quality of life for patients with motor impairments.
            </p>
          </div>
        </div>

        <div class="text-center mt-12">
          <a href="/research" class="inline-flex items-center text-primary-600 dark:text-primary-400 font-bold text-sm hover:underline group">
            View Research Publications
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  // Minimal, scoped JavaScript for position toggle
  document.addEventListener('DOMContentLoaded', () => {
    const toggleBtn = document.getElementById('toggle-positions-btn');
    const hiddenPositions = document.getElementById('hidden-positions');
    const btnText = document.getElementById('positions-btn-text');
    const chevron = document.getElementById('positions-chevron');
    
    let isExpanded = false;

    toggleBtn?.addEventListener('click', () => {
      isExpanded = !isExpanded;
      
      // Toggle visibility with smooth animation
      if (isExpanded) {
        hiddenPositions?.classList.remove('hidden');
        if (btnText) btnText.textContent = 'Show Less Positions';
        chevron?.classList.add('rotate-180');
      } else {
        hiddenPositions?.classList.add('hidden');
        if (btnText) btnText.textContent = 'Show More Positions';
        chevron?.classList.remove('rotate-180');
      }
    });
  });
</script>