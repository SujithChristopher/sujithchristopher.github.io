---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout 
  title="News & Updates - Sujith Christopher | Latest Research & Professional Achievements"
  description="Stay updated with Sujith Christopher's latest research developments, professional achievements, conferences, and news in bioengineering, computer vision, AI, and biomedical robotics at IIT Madras."
  keywords="Sujith Christopher news, research updates, bioengineering news, computer vision developments, AI research updates, IIT Madras news, professional achievements, conference presentations, research milestones"
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative overflow-hidden pt-32 pb-20 bg-grid-pattern">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-50/50 via-white to-accent-50/30 dark:from-primary-950/20 dark:via-gray-950 dark:to-gray-900 -z-10"></div>
      <div class="container-custom relative">
        <div class="text-center max-w-4xl mx-auto animate-fade-in">
          <h1 class="text-5xl md:text-6xl font-bold mb-8">
            News & 
            <span class="text-gradient">
              Updates
            </span>
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
            Stay informed about my latest research milestones, academic recognitions, and professional activities.
          </p>
        </div>
      </div>
    </section>

    <!-- Timeline -->
    <section class="section-padding">
      <div class="container-custom">
        <div class="max-w-5xl mx-auto">
          <div class="relative">
            <!-- Timeline Line -->
            <div class="absolute left-8 md:left-1/2 md:transform md:-translate-x-px top-0 bottom-0 w-1 bg-gradient-to-b from-primary-200 via-primary-500 to-accent-500 dark:from-primary-900 dark:via-primary-700 dark:to-accent-900 rounded-full opacity-20"></div>
            
            <div class="space-y-20 relative">
              <!-- News Item 1 - Feb 2024 -->
              <div class="relative flex flex-col md:flex-row items-start md:items-center animate-slide-up">
                <div class="absolute left-8 md:left-1/2 md:transform md:-translate-x-1/2 w-6 h-6 bg-white dark:bg-gray-950 border-4 border-primary-500 rounded-full z-10 shadow-[0_0_15px_rgba(14,140,228,0.3)]"></div>
                
                <div class="ml-20 md:ml-0 md:w-1/2 md:pr-16 md:text-right">
                  <div class="glass-card p-8 group hover:border-primary-500/30 transition-all duration-500">
                    <div class="inline-flex px-3 py-1 mb-6 rounded-full bg-primary-50 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400 text-xs font-bold uppercase tracking-widest border border-primary-100 dark:border-primary-800">
                      Feb 2024
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-primary-600 transition-colors">
                      RV-PHYSIOCON Workshop
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
                      Conducted an interactive workshop on RV-PHYSIOCON in Bangalore with <a href="https://biorehab.github.io/" target="_blank" class="text-primary-600 font-semibold hover:underline">@BioRehabGroup</a>. We showcased advancements in NeuroRehabilitation technology and computer vision.
                    </p>
                    <div class="aspect-video rounded-2xl overflow-hidden bg-gray-100 dark:bg-gray-800 shadow-inner">
                      <iframe 
                        src="https://www.youtube.com/embed/hF_kUx-l4uM" 
                        title="RV-PHYSIOCON Workshop"
                        class="w-full h-full"
                        style="border: none;" 
                        allowfullscreen
                      ></iframe>
                    </div>
                  </div>
                </div>
              </div>

              <!-- News Item 2 - Nov 2023 -->
              <div class="relative flex flex-col md:flex-row items-start md:items-center animate-slide-up" style="animation-delay: 0.1s;">
                <div class="absolute left-8 md:left-1/2 md:transform md:-translate-x-1/2 w-6 h-6 bg-white dark:bg-gray-950 border-4 border-accent-500 rounded-full z-10"></div>
                
                <div class="ml-20 md:ml-0 md:w-1/2 md:pl-16 md:mr-auto">
                  <div class="glass-card p-8 group hover:border-accent-500/30 transition-all duration-500">
                    <div class="inline-flex px-3 py-1 mb-6 rounded-full bg-accent-50 dark:bg-accent-900/30 text-accent-600 dark:text-accent-400 text-xs font-bold uppercase tracking-widest border border-accent-100 dark:border-accent-800">
                      Nov 2023
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-accent-600 transition-colors">
                      ReHackathon, India'23
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
                      Organized a major hackathon on neuro-rehab engineering at CMC Vellore. Great opportunity to mentor students and explore innovative project ideas.
                    </p>
                    <div class="aspect-video rounded-2xl overflow-hidden bg-gray-100 dark:bg-gray-800 shadow-inner">
                      <iframe 
                        src="https://www.youtube.com/embed/ZPAHwwmDY2A" 
                        title="ReHackathon India 2023"
                        class="w-full h-full"
                        style="border: none;" 
                        allowfullscreen
                      ></iframe>
                    </div>
                  </div>
                </div>
              </div>

              <!-- News Item 3 - Oct 2023 -->
              <div class="relative flex flex-col md:flex-row items-start md:items-center animate-slide-up" style="animation-delay: 0.2s;">
                <div class="absolute left-8 md:left-1/2 md:transform md:-translate-x-1/2 w-6 h-6 bg-white dark:bg-gray-950 border-4 border-yellow-500 rounded-full z-10"></div>
                
                <div class="ml-20 md:ml-0 md:w-1/2 md:pr-16 md:text-right">
                  <div class="glass-card p-8 group border-l-4 border-l-yellow-500 hover:border-yellow-500/30 transition-all duration-500 relative">
                    <div class="absolute top-4 right-4 text-yellow-500 opacity-20 group-hover:opacity-100 transition-opacity">
                      <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M5 16L3 5l5.5 3L12 5l3.5 3L21 5l-2 11H5zm2.7-2h8.6l.9-5.4-2.1 1.2L12 8l-3.1 1.8-2.1-1.2L7.7 14z"/>
                      </svg>
                    </div>
                    <div class="inline-flex px-3 py-1 mb-6 rounded-full bg-yellow-50 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400 text-xs font-bold uppercase tracking-widest border border-yellow-100 dark:border-yellow-800">
                      Oct 2023
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-yellow-600 transition-colors">
                      Silver Medal: CMC Research Day
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                      Awarded the Silver Medal at CMC Annual Research Day'23 for outstanding contribution to Bioengineering research.
                    </p>
                  </div>
                </div>
              </div>

              <!-- News Item 4 - Dec 2022 -->
              <div class="relative flex flex-col md:flex-row items-start md:items-center animate-slide-up" style="animation-delay: 0.3s;">
                <div class="absolute left-8 md:left-1/2 md:transform md:-translate-x-1/2 w-6 h-6 bg-white dark:bg-gray-950 border-4 border-primary-500 rounded-full z-10"></div>
                
                <div class="ml-20 md:ml-0 md:w-1/2 md:pl-16 md:mr-auto">
                  <div class="glass-card p-8 group border-l-4 border-l-primary-500 hover:border-primary-500/30 transition-all duration-500 relative">
                    <div class="absolute top-4 right-4 text-primary-500 opacity-20 group-hover:opacity-100 transition-opacity">
                      <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M5 16L3 5l5.5 3L12 5l3.5 3L21 5l-2 11H5zm2.7-2h8.6l.9-5.4-2.1 1.2L12 8l-3.1 1.8-2.1-1.2L7.7 14z"/>
                      </svg>
                    </div>
                    <div class="inline-flex px-3 py-1 mb-6 rounded-full bg-primary-50 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400 text-xs font-bold uppercase tracking-widest border border-primary-100 dark:border-primary-800">
                      Dec 2022
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-primary-600 transition-colors">
                      Best Paper Award: TN-AMPICON
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                      Received the Prof. T. N. B. NEDUNGADI Best Paper Award for my work on 3D Printed Pediatric Phantoms and Deformable Image Registration.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Professional Profiles -->
    <section class="section-padding bg-grid-pattern border-t border-gray-100 dark:border-gray-800">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-5xl font-bold mb-12">Stay Connected</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <a href="https://github.com/SujithChristopher" target="_blank" class="glass-card p-8 group hover:-translate-y-1 transition-all duration-300">
              <div class="flex items-center space-x-6">
                <div class="w-16 h-16 bg-gray-900 rounded-2xl flex items-center justify-center text-white">
                  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                </div>
                <div class="text-left">
                  <h3 class="text-xl font-bold">GitHub</h3>
                  <p class="text-gray-500 text-sm">Open Source Projects</p>
                </div>
              </div>
            </a>
            <a href="https://www.researchgate.net/profile/Sujith-Christopher" target="_blank" class="glass-card p-8 group hover:-translate-y-1 transition-all duration-300">
              <div class="flex items-center space-x-6">
                <div class="w-16 h-16 bg-emerald-500 rounded-2xl flex items-center justify-center text-white">
                  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M19.586 0c-.818 0-1.508.19-2.073.565-.563.377-.87.994-.92 1.846-.051.851.178 1.66.685 2.42l3.219 4.815c.507.761.761 1.658.761 2.688 0 1.029-.254 1.927-.761 2.688l-3.219 4.815c-.507.76-.736 1.569-.685 2.42.05.852.357 1.469.92 1.846.565.375 1.255.565 2.073.565.818 0 1.508-.19 2.073-.565.563-.377.87-.994.92-1.846.051-.851-.178-1.66-.685-2.42l-3.219-4.815c-.507-.761-.761-1.658-.761-2.688 0-1.029.254-1.927.761-2.688l3.219-4.815c.507-.76.736-1.569.685-2.42-.05-.852-.357-1.469-.92-1.846C21.094.19 20.404 0 19.586 0z"/></svg>
                </div>
                <div class="text-left">
                  <h3 class="text-xl font-bold">ResearchGate</h3>
                  <p class="text-gray-500 text-sm">Scientific Publications</p>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-slide-up');
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.animate-slide-up').forEach((el) => {
      observer.observe(el);
    });
  });
</script>